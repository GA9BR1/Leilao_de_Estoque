<% if @item_category.errors.any? %>
  <p>Verifique o erro abaixo: </p>
  <p><%= @item_category.errors.full_messages[0] %></p>
<% end %>

<%= form_with(model: @item_category) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>