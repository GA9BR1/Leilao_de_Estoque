<div id="<%= dom_id answer%>">
  <h4><%= link_to answer.user.name, users_profile_path(answer.user.id)%>
    <% if answer.user.admin %>
      (Administrador)
    <% end %>
  </h4>
  <p><%= answer.content %></p>
  <p><%= l(answer.updated_at.in_time_zone("Brasilia"), format: :bids_format) %></p>
</div>
